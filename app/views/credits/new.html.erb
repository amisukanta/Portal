<% provide(:title, "Credit card payment") %>
<div class="page-header">
  <h1>Payment with Credit card</h1>
</div>

<div class="row">
<div class="col-md-12">
<%#= params[:method_id] %>
 <%#= @unpaid_invoices %>

 <!-- <form class="form-horizontal"> -->
 <%= form_for(@credit, :html => {class: "form-horizontal"}) do |f| %>
   <%= render 'shared/error_messages', object: f.object %>


   <% if @unpaid_invoices != nil %>
     <%= render 'shared/unpaid_invoices', unpaid_invoices: @unpaid_invoices %>
  <% end %>
<div class="form-group">
  <%= f.label :payment_amount, :class => "control-label col-xs-4" %>
  <div class="col-xs-4">
      <%= f.text_field :amount, :class =>"form-control",  :placeholder =>"Amount" %>
  </div>
</div>
<%= f.hidden_field :method_id, :value => 1 %>

  <%= render 'credit_card', f: f %>

<div class="form-group">
    <div class="col-xs-offset-4 col-xs-4 col-xs-offset-4">
      <div class="col-xs-6">
        <%= f.submit 'Make Payment', :class => "btn btn-yellow" %>
      </div>
      <div class="col-xs-6">
        <%= link_to 'Cancel Payment', root_path, :class => "btn btn-danger" %>
      </div>
    </div>
</div>

<% end %>
<!-- </form> -->
</div>
</div>

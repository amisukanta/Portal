<div class="form-group">

    <%= f.label 'Name on Card', :class => "control-label col-xs-4" %>
    <div class="col-xs-4">
        <%= f.text_field :card_name, :class =>"form-control",  :placeholder =>"Name on Card" %>
    </div>
</div>
<div class="form-group">
  <%= f.label :card_number, :class => "control-label col-xs-4" %>
  <div class="col-xs-4">
      <%= f.text_field :card_number, :class =>"form-control",  :placeholder =>"Card Number" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :expiration_date, :class => "control-label col-xs-4" %>
  <div class="col-xs-4">
    <div class="row">
      <div class="col-xs-3">
        <%= f.select :month, (1..12).map {|i| "%02d" % i } %>

      </div>
      <div class="col-xs-6">
        <%= f.select :year, Date.today.year.. 8.years.from_now.year %>
      </div>

    </div>
  </div>
</div>
<div class="form-group">
  <%= f.label :security_code, :class => "control-label col-xs-4" %>
  <div class="col-xs-2 ">
      <%= f.text_field :security, :class =>"form-control",  :placeholder =>"CVV" %>
  </div>
</div>

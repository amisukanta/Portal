<% provide(:title, 'Dashboard') %>


  <% if logged_in? %>

  <div class="row">
    <p> <h3 class="bill"> Billing  <span class=" <%= label_color(@user[:status]) %>"> <%= @user[:status] %></span></h3></p>
    <div class="col-xs-6 ">

          <div class="thumbnail">
          <div class="caption">
          <dl class="dl-special">
            <dt><small>Account name :</small></dt>
            <dd><%= full_name(@user[:contact][:first_name], @user[:contact][:last_name])%> </dd>
            <dt><small>Account Number :</small></dt>
            <dd><%= @user[:user_id] %></dd>
            <dt><small>Service Address :</small></dt>
            <dd>
               <address>
               <strong> <%= @user[:contact][:address1]%> </strong></br>
               <%= @user[:contact][:address2] if @user[:contact][:address2] %>
               <%= @user[:contact][:postal_code] %> - <%= @user[:contact][:city] %>,  <%= @user[:contact][:state_province] %>, USA
               </adress>
             </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="thumbnail">
         <div class="caption">
            <h4> Statement </h4>
            <small><em> Next Invoice Date :</em> <%= time_format(@user[:next_invoice_date]) %></small>
            <ul class="list-group"><h5> Current Plan </h5>
              <% @items.each do |item| %>

                <li class="list-group-item"> <%= item[:description]%> <small> [ <%= number_to_currency(  item[:amount] )%> ]</small></li>

            <% end %>
          </div>
      </div>
    </div>
  </div>
  <div class="row">

    <div class="col-xs-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Last payment</h3>
        </div>
        <div class="panel-body">
         <%= number_to_currency(@payment[:amount],   precision: 2) %> (<%= @payment[:method] %>)</br>
         <small> Applied : <%= time_format(@payment[:payment_date]) %></small></small>
        </div>
     </div>
    </div>
    <div class="col-xs-3">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title">Past Due Balance</h3>
        </div>
        <div class="panel-body">
         <%= number_to_currency(@user[:carried_balance].to_f,   precision: 2) %></br>

        </div>
     </div>
    </div>
    <div class="col-xs-3">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title">Current Charges <span class=" <%= status_invoice @latest_invoice[:status_id] %>"> <%= status_print @latest_invoice[:status_id] %></span></h3>
        </div>
        <div class="panel-body">
         <%= number_to_currency(@latest_invoice[:balance],   precision: 2) %> </br>
         <small> Due Date : <%= time_format(@latest_invoice[:due_date]) %></small>
        </div>
     </div>
    </div>
    <div class="col-xs-3">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Total Balance</h3>
        </div>
        <div class="panel-body">
         <%= number_to_currency(@user[:owing_balance],   precision: 2) %></br>
         <small> Due Date : <%= time_format(@latest_invoice[:due_date]) %></small>
        </div>
     </div>
    </div>
  </div>
  <%#= @data %> </br></br>

  <%#= @latest_invoice %>
<% else %>
  <div class= "center jumbotron">
    <h1>Your </h1>
    <h2>Billing Portal
      <a href="#">Kitcarson billing portal</h2></a>
      <a href="#", class="btn btn-lg btn-primary">Login</h2></a>
      <%#= link_to "login now", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

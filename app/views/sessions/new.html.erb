<% provide(:title, 'Login') %>
<h1> Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(:session, url: login_path, :html => {class: "form-horizontal"}) do |f|  %>
      <div class="form-group">
        <%= f.label :username, :class => "col-xs-2 control-label" %>
        <div class="col-xs-10">
          <%= f.text_field :username, class: 'form-control', placeholder: "Email" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, :class => "col-xs-2 control-label"%>
      <%#= link_to "(forgot password)", new_password_reset_path %>
        <div class="col-xs-10">
          <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
          <div class="checkbox">
            <label>

              <%= f.check_box :remember_me  %> &nbsp;&nbsp;&nbsp; Remember me

            </label>
          </div>
        </div>
      </div>
      <%= f.submit "Log in", class: 'btn-lg btn-yellow', id: 'login' %>
    <% end %>
  
  </div>
</div>

<% provide(:title, 'Get New Password') %>
<h1></h1>
<div class="page-header">
  <h1><i class="fa fa-cogs"></i> Get a new password </h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(:session, url: get_password_path, :html => {class: "form-horizontal"}) do |f|  %>
      <div class="form-group">
        <%= f.label :username, :class => "col-xs-2 control-label" %>
        <div class="col-xs-10">
          <%= f.text_field :username, class: 'form-control', placeholder: "User Name" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
          <%= f.submit "Retrieve Password", class: 'btn btn-yellow', id: 'Retrieve Password' %>
        </div>
      </div>
    <% end %>

  </div>


</div>

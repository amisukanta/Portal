 <header class="navbar navbar-fixed-top navbar-custom">
    <div class="container">
      <div class="logo">
      <%#=link_to image_tag('Logo_Kit-1.png'), root_path %>
      <%= "Today" %></br>
      <i class="fa fa-calendar-check-o"></i> <%= time_format(Date.today)%>
     </div>
        <nav>
          <ul class="nav navbar-nav pull-right">


            <% if logged_in? %>
              <li><%= link_to '<i class="fa fa-tachometer"></i> Dashboard'.html_safe,   root_path %></li>
              <li> <%= link_to '<i class="fa fa-file-text"></i> Billing'.html_safe, invoices_path  %> </li>
              <li><%= link_to '<i class="fa fa-book fa-fw"></i> Payment'.html_safe,   payments_path %></li>

              <li class="dropdown">
                <a href = "#", class= "dropdown-toggle", data-toggle= "dropdown">
                  Account<b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <% @current_user = current_user %>
                  <li><%= link_to '<i class="fa fa-user"></i> Profile'.html_safe, user_path(@current_user[:user_id]) %></li>
                  <li><%= link_to '<i class="fa fa-wrench"></i> Settings'.html_safe, edit_user_path(@current_user[:user_id]) %></li>
                  <li class="divider"></li>
                  <li><%= link_to '<i class="fa fa-power-off"></i> Log out'.html_safe, logout_path, method: "delete" %><%#= link_to "Log in", login_path %></li>
                </ul>
              </li>

            <% else %>
              <li><%#= link_to '<i class="fa fa-user-plus"></i>Log in'.html_safe, login_path %></li>
            <% end  %>
          </ul>
        </nav>
    </div>
 </header>

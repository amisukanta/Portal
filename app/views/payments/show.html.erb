<% provide(:title, "Payment details") %>

<div class="row">
  <div class="page-header">
    <h1>Payment Details</h1>
  </div>
  <%= render 'payment_detail', statement: @statement %>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Try for a new payment</h3>
      </div>
      <div class="panel-body">


        <div class="col-xs-6">
          <%= link_to "Pay with credit card", new_credit_path, class: "btn btn-yellow" %>
        </div>
        <div class="col-xs-6">
          <%= link_to "Pay with ACH", new_bank_path, class: "btn btn-yellow" %>
        </div>
      </div>
    </div>
  </div>
</div>

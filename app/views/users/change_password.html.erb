<%#= @user.inspect %>
<% provide(:title, "Change password") %>

<div class="page-header">
  <h1>Change Password </h1>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <%= form_for(:user, url: update_password_path, :html => {class: "form-horizontal"}) do |f| %>
     <div class="form-group">
       <%= f.label :new_password, :class => "control-label col-xs-4" %>
       <div class="col-xs-8">
         <%= f.password_field :new_password, :class =>"form-control" %>
       </div>
     </div>
     <div class="form-group">
       <%= f.label :verify_password, :class => "control-label col-xs-4" %>
       <div class="col-xs-8">
         <%= f.password_field :verify_password, :class =>"form-control" %>
       </div>
     </div>
     <%= f.hidden_field :user_id , :value => @user[:user_id] %>
     <%= f.hidden_field :user_name , :value => @user[:user_name] %>
     <%= f.hidden_field :language_id , :value => @user[:language_id] %>
     <%= f.hidden_field :status_id , :value => @user[:status_id] %>
     <%= f.hidden_field :subscriber_status_id , :value => @user[:subscriber_status_id] %>
     <%= f.hidden_field :currency_id , :value => @user[:currency_id] %>
     <%= f.hidden_field :organization_name , :value => @user[:contact][:organization_name] %>
     <%= f.hidden_field :role , :value => @user[:role] %>
     <%= f.hidden_field :main_role_id , :value => @user[:main_role_id] %>
     <%= f.hidden_field :language , :value => @user[:language] %>

     <div class="form-group">
       <div class="col-sm-offset-4 col-sm-8">
         <%= f.submit "Update Password", class: "btn btn-primary" %>
       </div>
     </div>
   <% end %>
  </div>
</div>
